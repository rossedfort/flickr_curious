<div class="container large-top-margin">
  <div class="row">
    <% @album_photos.each_with_index do |photo, index| %>
      <div class="col s3">
        <div class="photo-container" id="album_photo_<%= index %>">
          <%= link_to photo_path(photo.id) do %>
            <%= image_tag FlickRaw.url_m(photo) %>
          <% end %>
          <div class="photo-description">
            <h1><%= photo.title %></h1>
            <p>views: <%= views(photo) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
