<div class="container center top-margin">
  <h1>Welcome to flickr curious :D</h1>
  <% if current_user %>
    <h1>hello <%= current_user.user_name %></h1><br>
    <h2>Your Most Recent Uploads</h2>
      <div class="photo-well">
        <div class="row">
          <% @photos.each do |photo| %>
            <div class="photo-container col s3" id="photo_<%= photo.id %>">
              <%= link_to photo_path(photo.id) do %>
                <%= image_tag get_photo(photo.id) %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
  <% else %>
    <%= link_to "login", login_path %>
    <div class="top-margin">
      <h1>Top Tags for Denver!</h1><br>
    <p>
      <% top_tags(@location.latitude, @location.longitude).each do |tag| %>
        <%= tag %> -
      <% end %>
    </p>
    <% end %>
  </div>
</div>
